{
  "$schema": "https://json.schemastore.org/eslintrc",
  "extends": ["plugin:vitest/recommended"],
  "overrides": [
    {
      "files": ["*.test.*"],
      "rules": {
        "vitest/no-focused-tests": "error",
        "vitest/no-disabled-tests": "error",
        "vitest/prefer-lowercase-title": [
          "warn",
          {
            "ignoreTopLevelDescribe": true
          }
        ]
      }
    }
  ]
}
